{% set bgwhite = true %}

{% extends "common/template/base.html.twig" %}

{% block title %}{{ 'registration_title'|trans }}{% endblock %}

{% block meta %}
    <meta name="description" content="{{ 'registration_meta_description'|trans }}">
    <meta name="og:description" content="{{ 'registration_meta_description'|trans }}">
    <meta name="og:title" content="{{ 'registration_title'|trans }}">
    <meta property="og:image" content="{{ url('homepage') ~ 'images/default_sharer.png' }}" />
{% endblock %}

{% block header %}
    <header class="collapse bg11">
        <!-- NAVIGATION -->
        {% include 'common/widget/navbar/base.html.twig' with {'navtitle' : 'registration_title' }%}
        <section>
            <div class="container">
                <div class="row">
                    <div class="col s12 center-align">
                        <div id="header-main-title">
                            <h1>{{ 'registration_main_title'|trans }}</h1>
                            <h2>{{ 'registration_secondary_title'|trans }}</h2>
                            <br />
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </header>
{% endblock %}

{% block body %}
    <!-- PAGE HEADING -->
    <section class="page-heading container hide-on-med-and-down">
        <nav>
            <div class="nav-wrapper">
                <div class="col s12">
                    <a href="{{ path('homepage') }}" class="breadcrumb">{{ 'home'|trans }}</a>
                    <span class="breadcrumb">{{ 'register'|trans }}</span>
                </div>
            </div>
        </nav>
        <h1>{{ 'registration_title'|trans }}</h1>
    </section>

    <!-- PAGE CONTENT -->
    <main class="container marge-top">
        <section>
            <div class="row">
                <div class="col s12">
                    <div class="card no-style">
                        <div class="card-content">
                            <div class="row">
                                <div class="col s12 m8 push-m2">
                                    <br>
                                    <span class="card-title less">{{ 'registration_activation_title'|trans }}</span>
                                    {% if success %}
                                        <p>{{ 'registration_activation_success'|trans }}</p>
                                        <br />
                                        <a href="{{ path('login') }}" class="btn waves-effect">{{ 'connexion'|trans }}</a>
                                    {% else %}
                                        <p>{{ 'registration_activation_fail'|trans }}</p>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
{% endblock %}

