{% extends "common/template/base.html.twig" %}

{% block title %}{{ 'admin_user'|trans }}{% endblock %}

{% block header %}
    <header class="collapse admin">
        <!-- NAVIGATION -->
        {% include 'common/widget/navbar/base.html.twig' with {'navtitle' : 'admin_user' } %}
    </header>
{% endblock %}


{% block body %}
<style>

</style>
    <div class="container">
        <h4>{{  'writing_article' | trans }}</h4>
        {{ form_start(form) }}
        <div class="card large">
            <div class="row">
                <div class="col s12 m6">
                    <div class="col m8 push-m2">
                        <div class="input-field col s12">
                            {{ form_widget(form.title) }}
                            <label for="first_name">{{ form_label(form.title) }}</label>
                        </div>
                        <div class="input-field col s12">
                            {{ form_widget(form.content) }}
                            <label for="appbundle_post_content">{{ form_label(form.content) }}</label>
                        </div>
                    </div>
                </div>
                <div class="col s12 m6">
                    <div class="col m8 push-m2">
                        {{ form_label(form.imagelink) }}
                        <div class="file-field input-field">
                            <div class="btn-floating btn-medium waves-effect waves-light">
                                <i class="material-icons dp48">add_a_photo</i>
                                {{ form_widget(form.imagelink) }}
                            </div>

                            <div class="file-path-wrapper">
                                <input class="file-path validate" type="text"/>
                            </div>
                        </div>
                        <img src="{{ asset('images/posts/'~post.imagelink) }}" style="width:100%">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col s12 m6 center">
                    {{ form_widget(form.save_draft) }}
                </div>
                <div class="col s12 m6">
                    {{ form_widget(form.save_published) }}
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>


{% endblock %}

