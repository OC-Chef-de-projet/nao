{% extends 'base.html.twig' %}




{% block body %}
    {% include ':admin/user:navbar.html.twig' %}


    <div class="container">
        {% include '::breadcrumb.html.twig'  with {'breadcrumb':header.breadcrumb} only %}
        <h4>{% trans %}gestion_utilisateurs{% endtrans %}</h4>
        <div class="card-panel">
            <div class="row">
                <div class="col s12 m6 push-m3 search">
                    <div class="input-field">
                        {{ form_start(form) }}
                        {{ form_widget(form.search) }}
                        <label for="icon_prefix"><i class="material-icons prefix">search</i><span
                                    class="search_name">{% trans %}recherche_par_nom{% endtrans %}</span></label>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
            <!-- -->
            <div class="row" id="userList">
                {% include ':admin/user:list.html.twig'  with {'users':users} only %}
            </div>
        </div>
        <div class="container center-align">
            <ul class="pagination">
                <input type="hidden" id="maxpage" value="{{ paginate.maxPages }}">
                <input type="hidden" id="maxcurrent" value="{{ paginate.current + 10 }}">
                <li id="chevron_left" {{ paginate.current <= 1 ? 'class="disabled"': 'class="waves-effect"' }}>
                    <a  id="prevpage" href="#">
                        <i class="material-icons">chevron_left</i>
                    </a>
                </li>

                {% for i in paginate.current..paginate.current + 10 %}
                    {% if i < paginate.maxPages  %}
                    <li id="p_{{ i }}" class="waves-effect {{ paginate.current == i ? 'active' }}{{ i > paginate.maxPages ? 'disabled' }}">
                        <a class="gotopage {{ i > paginate.maxPages ? ' not-active' }}" href="#"
                           data-page="{{ i }}">{{ i }}</a>
                    </li>
                    {% endif %}
                {% endfor %}

                <li id="chevron_right" {{ paginate.current == paginate.maxPages ? 'class="disabled"': 'class="waves-effect"' }}>
                    <a id="nextpage" href="#">
                        <i class="material-icons">chevron_right</i>
                    </a>
                </li>
            </ul>
        </div>
    </div>

{% endblock body %}




