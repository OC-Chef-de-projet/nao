{% set bgwhite = true %}
{% extends "common/template/base.html.twig" %}

{% block title %}{{ 'admin_user'|trans }}{% endblock %}

{% block header %}
    <header class="collapse admin">
        <!-- NAVIGATION -->
        {% include 'common/widget/navbar/base.html.twig' with {'navtitle' : 'admin_user' , 'admin' : true} %}
    </header>
{% endblock %}

{% block body %}
    <!-- PAGE HEADING -->
    <section class="page-heading container hide-on-med-and-down admin">
        <nav>
            <div class="nav-wrapper">
                <div class="col s12">
                    <a href="{{ path('homepage') }}" class="breadcrumb">{{ 'home'|trans }}</a>
                    <a href="{{ path('admin_homepage') }}" class="breadcrumb">{{ 'admin'|trans }}</a>
                    <a href="{{ path('admin_user_index') }}" class="breadcrumb">{{ 'admin_user'|trans }}</a>
                    <span class="breadcrumb">{{ 'admin_user_edit'|trans }}</span>
                </div>
            </div>
        </nav>
        <h1 class="activated">{{ 'admin_user'|trans }}</h1>
    </section>
    <main class="container marge-top">
        <section>
            <div class="row">
                <div class="col s12">
                    <div class="card no-style">
                        <div class="card-content">
                            <div class="row">
                                {{ form_start(form) }}
                                <div class="col s12 m10 push-m1">
                                    <br/>
                                    <div class="row">
                                        <div class="col s12 m6">
                                            <div class="col s12 m4 push-s3">
                                                <div style="height: 100px;width:100px">
                                                    <img src="{{ asset(user.getImagePath) }}" alt=""
                                                         class="circle responsive-img" style="width:100%;height:100%">
                                                </div>
                                            </div>
                                            <div class="col s12 m8">
                                                <h4>{{ user.name }}</h4>
                                                <p>{% trans %}enrolled_since{% endtrans %} {{ user.created|date('d/m/Y') }}</p>
                                                <br/>
                                            </div>

                                        </div>
                                        <div class="col s12 m6">
                                            {{ form_widget(form.role) }}
                                            <br/>
                                            <div class='switch row'>
                                                <label>
                                                    {{ form_widget(form.inactive) }}
                                                    <span class="lever"></span>
                                                    {{  'bloqued_user' | trans }}
                                                </label>
                                            </div>
                                        </div>

                                    </div>
                                    <br />
                                    <div class="row">
                                        <div class="col s12 m6 right">
                                            <div class="row">
                                                <div class="col s6">
                                                    {{ form_widget(form.cancel) }}
                                                </div>
                                                <div class="col s6">
                                                    {{ form_widget(form.save) }}
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col s12 m6 right">

                                        </div>
                                    </div>
                                </div>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script>
        $(function () {
            $('select').material_select();
            $('.modal').modal();
        });
    </script>
{% endblock %}
