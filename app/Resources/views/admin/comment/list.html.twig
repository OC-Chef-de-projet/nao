<div class="card z-depth-0">
    {% for cmt in cmtlist %}
    <div class="col s12">
        <div class="card no-style post-card  z-depth-0">
            <div class="card-content">
                <div class="row no-pad-right">
                    <div class="col s2 m1">
                        <div class="img-container-small">
                            <img src="{{ asset(cmt.user.getImagePath) }}">
                        </div>
                    </div>
                    <div class="col s10 m11  no-pad-right">
                        <div class="col s12 no-pad-right">
                            <b><span class="title">{{ cmt.user.name }}</span></b>
                            <p class="secondary-content caption light-2">{{ 'published_at' |trans ({'%date%': cmt.created|date("d/m/Y")}) }}</p>
                        </div>
                        <div class="col s12">
                            {{ cmt.content }}
                            <br>
                        </div>
                        <div class="col s12 no-pad-right">

                            <br>
                            <div class="row">
                                <div class="col s6">

                                    <i class="material-icons post-icon prefix light-2 post-link">delete</i>
                                    <a class="waves-effect modal-trigger confirm btn-link" href="#action-cmt"
                                       data-cmtid="{{ cmt.id }}" data-cmtaction="delete">
                                        {{ 'delete' | trans }}
                                    </a>
                                </div>

                                <div class="col s6 pull-m4">
                                    <i class="material-icons post-icon prefix light-2 post-link">verified_user</i>
                                    <a class="waves-effect modal-trigger confirm btn-link" href="#action-cmt"
                                       data-cmtid="{{ cmt.id }}" data-cmtaction="authorize">
                                        {{ 'authorize' | trans }}
                                    </a>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>



