{% if meta is defined %}
    <meta name="description" content="{{ meta.description }}">
    <meta property="og:title" content="{{ title }}" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="{{ url(current_route)|trim('/') }}" />

    {%  if meta.image is defined %}
        <meta property="og:image" content="{{ url('homepage') ~ meta.image }}" />
    {% else %}
        <meta property="og:image" content="{{ url('homepage') ~ 'images/default_sharer.png' }}" />
    {% endif %}

    <meta property="og:locale" content="fr_FR">
    <meta property="og:site_name" content="{{ 'NAO'|trans }}">
{% endif %}
