{% if app.request.cookies.get('nao-cookies-policy') != 1 %}
<section class="cookie-law">
    <div class="row no-pad-bot">
        <div class="col s12 m9">
            {{ 'cookies_explain'|trans|nl2br }}
        </div>
        <div class="col s12 m3">
            <a class="btn waves-effect" id="accept_cookie_policy">{{ 'i_agree'|trans }}</a>
            &nbsp;&nbsp;&nbsp;<a href="https://www.cnil.fr/fr/cookies-traceurs-que-dit-la-loi" target="_blank">{{ 'want_to_know_more'|trans }}</a>
        </div>
    </div>
</section>
{% endif %}
