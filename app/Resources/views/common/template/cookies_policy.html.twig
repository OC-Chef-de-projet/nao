{% if app.request.cookies.get('nao-cookies-policy') != 1 %}
<section class="cookie-law">
    <div class="container">
        <div class="row no-pad-bot">
            <div class="col s12 m7">
                {{ 'cookies_explain'|trans|nl2br }}
            </div>
            <div class="col s12 m5">
                <div class="cookie-action">
                    <a class="btn waves-effect" id="accept_cookie_policy">{{ 'i_agree'|trans }}</a>
                    <a href="https://www.cnil.fr/fr/cookies-traceurs-que-dit-la-loi" target="_blank" class="btn waves-effect white">{{ 'want_to_know_more'|trans }}</a>
                </div>
            </div>
        </div>
    </div>
</section>
{% endif %}
