{% set user_is_logged           = app.user %}
{% set current_route            = app.request.get('_route') %}

<!DOCTYPE html>
<html lang="fr" prefix="og: http://ogp.me/ns#">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=no" />
        <title>{{ page.title }} - {{ 'NAO'|trans }}</title>

        <!-- META -->
        {% if page.meta is defined %}
            <meta name="description" content="{{ page.meta.description }}">
            <meta property="og:title" content="{{ page.title }}" />
            <meta property="og:type" content="website" />
            <meta property="og:url" content="{{ url(current_route) }}" />
            <meta property="og:image" content="" />
            <meta property="og:locale" content="fr_FR">
            <meta property="og:site_name" content="{{ 'NAO'|trans }}">
        {% endif %}

        <!-- APPLE TOUCH -->
        <link rel="apple-touch-icon" href="{{ asset('apple-touch-icon.png') }}">

        <!-- FAVICON -->
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
        <link rel="icon" type="image/png" href="{{ asset('favicon-32.png') }}" sizes="32x32">

        <!-- STYLESHEET -->
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link rel="stylesheet" href="//cdn.materialdesignicons.com/2.0.46/css/materialdesignicons.min.css">

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('assets/css/core.min.css') }}"/>
            <link rel="stylesheet" href="{{ asset('assets/css/custom.min.css') }}"/>
        {% endblock stylesheets %}

    </head>
    <body>
        <!-- SIDE MENU -->
        {% include 'common/widget/sidebar/base.html.twig' with { 'user_is_logged' : user_is_logged } %}

        <!-- SEARCH DROPDOWN -->
        {% include 'common/widget/dropdown/search.html.twig' only %}

        <!-- SOCIALBOX WIDGET -->
        {% include 'common/widget/social/socialbox.html.twig' only %}

        <!-- HEADER -->
        {% include 'common/template/header/base.html.twig' with { 'current_route' : current_route, 'page' : page } %}

        <!-- PAGE HEADING -->
        {% if current_route != 'homepage' %}
        <section class="page-heading container hide-on-med-and-down">
            {% include 'common/widget/breadcrumb/base.html.twig' with { 'breadcrum' : page.breadcrum } only %}
            <h1>{{ page.title }}</h1>
        </section>
        {% endif %}

        <!-- PAGE CONTENT -->
        {% block body %}{% endblock %}

        <!-- FOOTER -->
        {% include 'common/template/footer/base.html.twig'%}

        <!---------- JAVASCRIPT ---------->
        <!-- Google Analytics -->
        <script>
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
            ga('create', 'UA-44230XXX-X', 'auto');
            ga('send', 'pageview');
        </script>

        {% block javascripts %}
           <script src="{{ asset('assets/js/core.min.js') }}"></script>
            <script src="{{ asset('assets/js/nao.min.js') }}"></script>
        {% endblock javascripts %}
    </body>
</html>

