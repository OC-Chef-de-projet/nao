<div class="col s12">
    <div class="comment-content">
        <div class="img-container" style="background: url({{ asset(comment.user.imagePath ) }}) center/cover no-repeat ;width:50px;height: 50px; float: left;">

        </div>
        <div class="comment-detail">
            <span class="right caption light-2-no-hov">{{ 'published_at'|trans({'%date%': comment.created|date("d/m/Y")}) }}</span>
            <a href="{{ path('dashboard.user', {'id' : comment.user.id, 'name' : comment.user.slug }) }}" class="bleen">{{ comment.user.name }}</a>
            <p>{{ comment.content }}</p>
        </div>
    </div>
</div>
