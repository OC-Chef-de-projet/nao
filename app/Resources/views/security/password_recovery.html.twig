{% extends "common/template/base.html.twig" %}

{% block title %}{{ 'account_recovery_page_title'|trans }}{% endblock %}

{% block meta %}
    <meta name="description" content="{{ 'account_recovery_page_meta_description'|trans }}">
    <meta name="og:description" content="{{ 'account_recovery_page_meta_description'|trans }}">
    <meta name="og:title" content="{{ 'account_recovery_page_title'|trans }}">
    <meta property="og:image" content="{{ url('homepage') ~ 'images/default_sharer.png' }}" />
{% endblock %}

{% block header %}
    <header class="collapse bg14">
        <!-- NAVIGATION -->
        {% include 'common/widget/navbar/base.html.twig' with {'navtitle': 'account_recovery_page_title'}%}
        <section>
            <div class="container">
                <div class="row">
                    <div class="col s12 center-align">
                        <div id="header-main-title">
                            <h1>{{ 'account_recovery_main_title'|trans }}</h1>
                            <h2>{{ 'account_recovery_secondary_title'|trans }}</h2>
                            <br />
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </header>
{% endblock %}

{% block body %}
    <!-- PAGE HEADING -->
    <section class="page-heading container hide-on-med-and-down">
        <nav>
            <div class="nav-wrapper">
                <div class="col s12">
                    <a href="{{ path('homepage') }}" class="breadcrumb">{{ 'home'|trans }}</a>
                    <span class="breadcrumb">{{ 'lost_password'|trans }}</span>
                </div>
            </div>
        </nav>
        <h1>{{ 'account_recovery_page_title'|trans }}</h1>
    </section>

    <!-- PAGE CONTENT -->
    <main class="container marge-top">
        <section>
            <div class="row">
                <div class="col s12">
                    <div class="card">
                        <div class="card-content">
                            <form id="reset_password_form" method="post" autocomplete="off">
                                <div class="row">
                                    <div class="col s12">
                                        <br>
                                        <span class="card-title less">{{ 'account_raz_password_title'|trans }}</span>
                                        <p>{{ 'account_raz_password_explain'|trans }}</p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col s12 m8">
                                        <input style="display:none">
                                        <div class="input-field col s12">
                                            <input name="email" type="email" required />
                                            <label>{{ 'label_email'|trans }}</label>
                                        </div>
                                    </div>
                                    <div class="col s12 m4 center-align">
                                        <br />
                                        <div class="input-field col s12">
                                            <input type="submit" class="btn waves-effect" value="{{ 'send_raz_link'|trans }}" />
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
{% endblock %}
